{% extends 'base.html.twig' %}
{% block title 'Manage all tags' %}
    {% block body %}
        <h1>Manage all tags</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message}}
            </div>
        {% endfor %}
        <div class="text-right">
            <a href="{{ path('admin.tag.new') }}" class="btn btn-primary">Create</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in tags %}
                    <tr>
                        <td>
                            {{ tag.name }}</td>
                        <td>
                            <a href="{{ path('admin.tag.edit', {id: tag.id}) }}" class="btn btn-warning">Edit</a>
                            <form method="post" action="{{ path('admin.tag.delete', {id: tag.id}) }}" style="display: inline-block">
                                <input name="_method" type="hidden" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endblock %}
        