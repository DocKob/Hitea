{% extends 'base.html.twig' %}
{% block title 'All Customers' %}
    {% block body %}
        <div class="jumbotron">
            {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col">
                    {{ form_row(form.name) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Search</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="container">
            <h1>View all customers</h1>
            <div class="row">
                {% for customer in customers %}
                    <div class="col-md-4">
                        {% include 'front/customer/_customer.html.twig' %}</div>
                {% endfor %}
            </div>
            <div class="col-md-4 offset-md-4">
                {{ knp_pagination_render(customers) }}
            </div>
        </div>
    {% endblock %}
